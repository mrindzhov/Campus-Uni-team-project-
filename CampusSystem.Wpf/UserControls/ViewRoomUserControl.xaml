<UserControl x:Class="CampusSystem.Wpf.UserControls.ViewRoomUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <Grid x:Name="TheGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="28" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Стая номер: " FontStyle="Italic" HorizontalAlignment="Center" 
                       Target="{Binding ElementName=RoomNumber}"/>
            <Label Grid.Row="2" Content="Брой живущи: " FontStyle="Italic" HorizontalAlignment="Center"                   
                   Target="{Binding ElementName=StudentsCount}" />
            <Label Grid.Row="4" Content="Общo дължима сума:" FontStyle="Italic" HorizontalAlignment="Center" 
                   Target="{Binding ElementName=TotalTakings}"/>
            <TextBlock Grid.Row="1" x:Name="RoomNumber"  Text="{Binding Number}" HorizontalAlignment="Center" FontWeight="Bold" />
            <TextBlock Grid.Row="3" x:Name="StudentsCount" Text="{Binding Students.Count}"  HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Row="5" x:Name="TotalTakings" Text="{}" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Grid>

